{
    "model": "haiku",
    "permissions": {
        "defaultMode": "acceptEdits",
        "allow": [
            "Read(========== Read Section ==========)",
            "Read(========== Write Section ==========)",
            "Write(.claude/*.md)",
            "Write(.claude/TEACHING.md)",
            "Write(.claude/skills/*/*.md)",
            "Write(.claude/skills/*/SKILL.md)",
            "Write(.claude/skills/*/references/*.md)",
            "Write(.claude/skills/*/scripts/*.py)",
            "Write(./**/*.md)",
            "Write(./README.md)",
            "Write(./README-cn.md)",
            "Write(./TICKET.md)",
            "Write(./CLAUDE.md)",
            "Write(tests/**/*.py)",
            "Read(========== Bash Section ==========)",
            "Bash(.venv/bin/python debug/**/*.py)",
            "Bash(.venv/bin/python scripts/**/*.py)",
            "Bash(.venv/bin/python config/**/*.py)",
            "Bash(.venv/bin/python tests/**/*.py)",
            "Bash(mise *)",
            "Read(========== Skill Section ==========)",
            "Skill(teach-start)",
            "Skill(teach-start-cn)",
            "Skill(teach-code)",
            "Skill(teach-code-cn)",
            "Skill(teach-explain)",
            "Skill(teach-explain-cn)",
            "Skill(teach-debug)",
            "Skill(teach-debug-cn)",
            "Skill(teach-brainstorm)",
            "Skill(teach-brainstorm-cn)",
            "Skill(teach-check)",
            "Skill(teach-check-cn)",
            "Skill(lesson-smith)",
            "Read(========== Web Search ==========)",
            "WebSearch",
            "Read(========== Web Fetch ==========)",
            "WebFetch(domain:raw.githubusercontent.com)"
        ]
    }
}